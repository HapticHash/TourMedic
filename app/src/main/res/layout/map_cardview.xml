<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="350dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        android:layoutMode="clipBounds"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="7dp"
        android:layout_height="130dp"
        android:id="@+id/mapcards">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/map_img"
                android:layout_margin="10dp"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:scaleX="1.0"
                android:scaleY="1.0"
                android:src="@drawable/jodhpur" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text10"
                android:text="Hawa Mahal"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:layout_toRightOf="@+id/map_img"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text20"
                android:text="Open till 4:00 PM"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:layout_below="@+id/text10"
                android:textColor="#FF058114"
                android:layout_toRightOf="@+id/map_img"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="4.0"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/map_img"
                android:layout_below="@+id/text20"
                android:id="@+id/text30"/>

            <RatingBar
                android:id="@+id/ratingBar0"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="80dp"
                android:layout_marginTop="7dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/text30"
                android:layout_below="@+id/text20"
                android:rating="4.0"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>