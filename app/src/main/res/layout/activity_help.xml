<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Health and Emergency"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Emergencies"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textStyle="normal"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:text="Call '108' for any emergency services. The 108 Emergency Response Service is a free emergency service providing integrated medical, police and fire emergency services."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Doctors and Clinics"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textStyle="normal"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:text="The front-desk staff at your hotel can often recommend a doctor, or you can be referred by a local hospital. "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textStyle="normal"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:text="Several healthcare providers offer walk-in medical centres which has outpateint clinics throughout the city, like "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textStyle="normal"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:textColor="#4caf50"
        android:text="Primary Health Centre, Community Health Centre"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:text="Insurance"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textStyle="normal"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:text="Health Issues can be more expensive, so consider taking out comprehensive medical insurance before traveling."/>


</LinearLayout>