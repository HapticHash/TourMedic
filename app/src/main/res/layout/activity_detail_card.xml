<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/image_detail"
                android:elevation="10dp"
                android:background="@drawable/jodhpur"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_detail"
                android:id="@+id/placeName_detail"
                android:text="Mehrangarh Fort"
                android:fontFamily="sans-serif"
                android:textColor="#000"
                android:background="#fff"
                android:paddingTop="15dp"
                android:paddingLeft="25dp"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placeName_detail"
                android:id="@+id/placeShortDesc"
                android:text="Massive historic site with preserved art"
                android:fontFamily="sans-serif"
                android:textColor="#000"
                android:background="#fff"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:paddingLeft="25dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placeShortDesc"
                android:lineSpacingExtra="5dp"
                android:id="@+id/placeDetail"
                android:text="Mehrangarh (Mehran Fort), located in Jodhpur, Rajasthan, is one of the largest forts in India. Built around 1460 by Rao Jodha, the fort is situated 410 feet (125 m) above the city and is enclosed by imposing thick walls. Inside its boundaries there are several palaces known for their intricate carvings and expansive courtyards. A winding road leads to and from the city below. The imprints of the impact of cannonballs fired by attacking armies of Jaipur can still be seen on the second gate. To the left of the fort is the chhatri of Kirat Singh Soda, a soldier who fell on the spot defending the Mehrangarh fort."
                android:fontFamily="sans-serif"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round2"
                android:padding="15dp"
                android:textSize="16sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placeDetail">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingText"
                    android:text="4.7"
                    android:textSize="40sp"
                    android:textColor="#ff5722"
                    android:layout_marginLeft="20dp" />

                <RatingBar
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:id="@+id/ratingstar_detail"
                    android:layout_toRightOf="@id/ratingText"
                    android:rating="4.7" />

            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>
</android.support.constraint.ConstraintLayout>
