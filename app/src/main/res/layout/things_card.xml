<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="2dp"
    android:layoutMode="clipBounds"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_height="280dp"
    android:id="@+id/cardview_things">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/frame"
        android:layout_height="180dp">
        <ImageView
            android:id="@+id/img_things"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:src="@drawable/jodhpur" />
        <ImageView
            android:id="@+id/ic2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:alpha="0.3"
            android:src="@drawable/gradient" />

        <TextView
            android:id="@+id/place_card"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Hawa Mahal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="#FFFFFF"/>
    </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/frame"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="4.5"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/rating_thing"/>

            <RatingBar
                android:id="@+id/ratingBar_thing"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="80dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_height="20dp"
                android:rating="4.5"/>

            <!--<ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginStart="35dp"
                android:id="@+id/imv1"
                android:src="@drawable/ic_star_rate_black_18dp"/>
                -->

        </RelativeLayout>

        <TextView
            android:id="@+id/time_thing"
            android:layout_width="260dp"
            android:layout_height="20dp"
            android:text="Open till 6:00 PM"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#FF058114"
            android:layout_below="@+id/frame"/>

            <TextView
                android:id="@+id/deesc_thing"
                android:layout_width="260dp"
                android:layout_height="20dp"
                android:text="Fort"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/frame"/>
        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>