<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    android:layoutMode="clipBounds"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_height="160dp"
    android:id="@+id/cardview_dayplan_card">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="160dp">
        <ImageView
            android:id="@+id/icl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:src="@drawable/jodhpur" />

        <ImageView
            android:id="@+id/ic2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:alpha="0.3"
            android:src="@drawable/gradient" />
        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="FROM :"
            android:id="@+id/fttv1"
            android:fontFamily="sans-serif"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Surat"
            android:id="@+id/fttv2"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/fttv1"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="To :"
            android:id="@+id/fttv3"
            android:fontFamily="sans-serif"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/fttv1"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="20dp"
           android:id="@+id/fftv4"
           android:text="Baroda"
           android:layout_toRightOf="@+id/fttv3"
           android:layout_below="@+id/fttv2"
           android:textColor="@color/colorPrimary"
           android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Hawa Mahal"
            android:id="@+id/fftv5"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="120dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorPrimary"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>